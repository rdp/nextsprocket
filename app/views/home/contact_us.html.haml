- title = "Contact Us"
- content_for :page_title, title

#meta-panel
  .container_16
    .grid_16
      %h2= title
    .clear

#static
  .container_16
    .grid_10
      = error_messages_for :feedback, :header_message => t(:'errors.default-header-title')
      - form_for(@feedback) do |f|
        %fieldset
          .group
            %h4= f.label(:name)
            %p= f.text_field(:name)
          .group
            %h4= f.label(:email)
            %p= f.text_field(:email)
          .group
            %h4= f.label(:title)
            %p= f.text_field(:title)
          .group
            %h4= f.label(:message)
            %p= f.text_area(:message, :rows => 10)
          .group
            %h4= "Validate"
            %div{:style => 'line-height:2em;margin:1em 0 0 190px;padding:0;'}= recaptcha_tags(:display => {:theme => 'clean'})
        %p.buttons= f.submit('Send')
    .grid_4
      #right_column
        = render :partial=> "home/right_column"
    .clear